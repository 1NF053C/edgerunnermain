Bootstrap: docker
From: node:18

%post
    apt-get update
    mkdir /app
    cd /app

%environment
    export PATH=/app/node_modules/.bin:$PATH

%startscript
    cd /app && npm install && npm run dev

%runscript
    cd /app && npm install && npm run start

## BUILD IMAGE CMD
# apptainer build edgerunner.dev.sif edgerunner.dev.def

## RUN CONTAINER CMD
# apptainer run --bind ./:/app edgerunner.dev.sif
