generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database/edgerunner.db"
}

model Place {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  longitude   Float
  latitude    Float
  addressId   Int     @unique
  address     Address @relation(fields: [addressId], references: [id])
}

model Address {
  id        Int    @id @default(autoincrement())
  formatted String
  place     Place?
}

model MapboxPublicConfig {
  id  Int @id @default(autoincrement())
  publickey String
}
